<?xml version="1.0" encoding="UTF-8"?>
<web-app 
   xmlns="http://java.sun.com/xml/ns/javaee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5"> 
  <display-name>Denni menu v ceskych restauracich</display-name>
  
  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>webmenu.MainServlet</servlet-class>
  </servlet>

  <servlet>
     <servlet-name>DeliveryView</servlet-name>
     <jsp-file>delivery.jsp</jsp-file>
  </servlet>

  <servlet>
     <servlet-name>UpdateServlet</servlet-name>
     <servlet-class>webmenu.UpdateServlet</servlet-class>
  </servlet>

  <servlet>
     <servlet-name>StaticContentServlet</servlet-name>
     <servlet-class>webmenu.StaticContentServlet</servlet-class>
     <init-param>
        <param-name>basePath</param-name>
        <param-value>resources</param-value>
     </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UpdateServlet</servlet-name>
    <url-pattern>/-update/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
     <servlet-name>StaticContentServlet</servlet-name>
     <url-pattern>/resources/*</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
     <welcome-file>MainServlet</welcome-file>
  </welcome-file-list>
</web-app>
